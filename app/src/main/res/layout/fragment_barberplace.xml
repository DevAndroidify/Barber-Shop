<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".barberplace">


    <ImageView
        android:id="@+id/barberimage"
        android:layout_width="match_parent"
        android:layout_height="295dp"

        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barbername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#2c4a7e"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barberimage" />

    <TextView
        android:id="@+id/barberservices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"

        android:text=""
        android:textColor="#2c4a7e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barbername" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barberimage" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:text="Location:"
        android:textColor="#2c4a7e"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/barberimage" />

    <ImageView
        android:id="@+id/popbackicon"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/queue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barberservices" />

    <TextView
        android:id="@+id/queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:text="TextView"
        android:textColor="#2c4a7e"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <Button
        android:id="@+id/bookanappointment"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#2c4a7e"
        android:text="Book An Appointment"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/selectadate"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:layout_marginEnd="96dp"
        android:src="@drawable/appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queue" />

    <TextView
        android:id="@+id/selectdatetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="Select A Date"
        android:textColor="#2c4a7e"
        android:textSize="16dp"

        app:layout_constraintEnd_toStartOf="@+id/selectadate"
        app:layout_constraintTop_toBottomOf="@+id/queue" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
          android:layout_marginTop="10dp"
        android:id="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectadate">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RadioButton
                android:id="@+id/tenam"
                style="@style/RadioButtonStyle"
                android:layout_width="80dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:background="@drawable/button"
                android:text="10:AM"
                android:textColor="@color/black"

                android:textStyle="bold" />
         <RadioButton
             android:id="@+id/elevanam"
             style="@style/RadioButtonStyle"
             android:layout_width="80dp"
             android:visibility="invisible"

             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:text="11:AM"
             android:textColor="@color/black"

             android:textStyle="bold" />
         <RadioButton
             android:id="@+id/twelvepm"
             style="@style/RadioButtonStyle"
             android:visibility="invisible"

             android:layout_width="80dp"
             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:text="12:PM"
             android:textColor="@color/black"

             android:textStyle="bold" />
         <RadioButton
             android:id="@+id/onepm"
             style="@style/RadioButtonStyle"
             android:layout_width="80dp"
             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:visibility="invisible"

             android:layout_gravity="center"
             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:text="01:PM"
             android:textColor="@color/black"

             android:textStyle="bold" />
         <RadioButton
             android:id="@+id/twopm"
             style="@style/RadioButtonStyle"
             android:layout_width="80dp"
             android:visibility="invisible"

             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:text="02:PM"
             android:textColor="@color/black"

             android:textStyle="bold" />
         <RadioButton
             android:id="@+id/threepm"
             style="@style/RadioButtonStyle"
             android:layout_width="80dp"
             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:visibility="invisible"

             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:text="03:PM"
             android:textColor="@color/black"

             android:textStyle="bold" />
         <RadioButton
             android:id="@+id/fourpm"
             style="@style/RadioButtonStyle"
             android:layout_width="80dp"
             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:visibility="invisible"

             android:text="04:PM"
             android:textColor="@color/black"

             android:textStyle="bold" />
         <RadioButton
             android:id="@+id/fivepm"
             style="@style/RadioButtonStyle"
             android:layout_width="80dp"
             android:layout_marginRight="10dp"
             android:layout_height="40dp"
             android:visibility="invisible"

             android:layout_gravity="center"
             android:paddingLeft="20dp"
             android:background="@drawable/button"
             android:text="05:PM"
             android:textColor="@color/black"

             android:textStyle="bold" />
        </RadioGroup>


    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>